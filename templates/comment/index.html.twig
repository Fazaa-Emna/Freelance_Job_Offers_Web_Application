                <th scope="col"> Comment Id </th>
                <th scope="col"> Body </th>
                <th scope="col"> Modification</th>
                <th scope="col"> suppression</th>
            </thead>
            <tbody>

                {% for comment in b %}                    
                    <tr>
                        
                        <td > {{comment.id}}</td>
                        <td > {{comment.body}} </td>
