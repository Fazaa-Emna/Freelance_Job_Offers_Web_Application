
{% extends 'front.html.twig'%}

{% block body %}
    <div style= "display: flex; align-items: center;justify-content:center; margin-top:100px;padding:10px;">

      <div class="card">
        <div class="card-body">
        <a class='btn btn-primary' href="{{path ('display_blog') }}">return </a>
          <h5 class="card-title">ADD A BLOG</h5>

          <!-- General Form Elements -->
          {{ form_start (f,{attr:{novalidate:'novalidate'}}) }}
          <div class="row mb-10 col-sm-10">
            <label for="inputText" class="col-sm-6 col-form-label">Title</label>
              <div class="col-sm-5">
                {{ form_widget (f.title,{'attr':{'class':'form-control'}}) }}
                    {{ form_errors (f.title,{'attr':{'class':'text-danger'}})}}
                    
              </div>
            </div>

                <div class="row mb-10 col-sm-10">
            <label for="inputText" class="col-sm-6 col-form-label">Body</label>
              <div class="col-sm-5">
                {{ form_widget (f.body,{'attr':{'class':'form-control'}}) }}
                    {{ form_errors (f.body,{'attr':{'class':'text-danger'}})}}
                    
              </div>
            </div>


                  
          <div class="col-sm-10" style="display:flex; align-items:center; justify-content:center">
              
            {{ form_widget (f.Ajouter,{'attr':{'class':'btn btn-primary'}}) }}
            
             
          </div>

        {{ form_end (f) }}

      </div>
    </div>

  </div> 

{% endblock %}