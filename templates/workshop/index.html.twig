{% extends 'base.html.twig' %}

{% block title %}Workshop index{% endblock %}

{% block body %}
    <h1>Workshop index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Agenda</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
        {% for workshop in workshops %}
            <tr>
                <td>{{ workshop.agenda }}</td>
                <td>
                    <button  class="btn"> <a href="{{ path('app_workshop_show', {'event': workshop.event.eventId}) }}">show</a></button> </td>
                <td>  <button  class="btn"><a href="{{ path('app_workshop_edit', {'event': workshop.event.eventId}) }}">edit</a></button> </td>
                <td> {{ include('workshop/_delete_form.html.twig') }} </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<button  class="btn"><a href="{{ path('app_workshop_new') }}">Create new Workshop</a></button>
{% endblock %}
