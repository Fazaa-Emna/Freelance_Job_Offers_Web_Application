{% extends 'base.html.twig' %}

{% block title %}Workshop{% endblock %}

{% block body %}
    <h1>Workshop</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Event Name</th>
            <td>{{ workshop.event.eventName }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ workshop.event.description  }}</td>
        </tr>
        <tr>
            <th>Start Date</th>
            <td>{{  workshop.event.startDate ? workshop.event.startDate|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>End Date </th>
            <td>{{  workshop.event.endDate ? workshop.event.endDate|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>location</th>
            <td>{{  workshop.event.location  }}</td>
        </tr>
        <tr>
            <th>Max Attendees</th>
            <td>{{  workshop.event.maxAttendees  }}</td>
        </tr>
        <tr>
            <th>Registration deadline</th>
            <td>{{ workshop.event.registrationdeadline ? workshop.event.registrationdeadline|date('Y-m-d') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <button  class="btn"><a href="{{ path('app_workshop_index') }}">Back</a></button>
{% endblock %}
