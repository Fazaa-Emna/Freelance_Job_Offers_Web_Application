{% extends 'base.html.twig' %}

{% block title %}Hackathon{% endblock %}

{% block body %}
    <h1>Hackathon</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Event Name</th>
                <td>{{ hackathon.event.eventName }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ hackathon.event.description  }}</td>
            </tr>
            <tr>
                <th>Start Date</th>
                <td>{{  hackathon.event.startDate ? hackathon.event.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>End Date </th>
                <td>{{  hackathon.event.endDate ? hackathon.event.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>location</th>
                <td>{{  hackathon.event.location  }}</td>
            </tr>
            <tr>
                <th>Max Attendees</th>
                <td>{{  hackathon.event.maxAttendees  }}</td>
            </tr>
            <tr>
                <th>Registration deadline</th>
                <td>{{ hackathon.event.registrationdeadline ? hackathon.event.registrationdeadline|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>QR Code</th>
                <td><img src="{{ qrCode }}" alt="QR Code"></td>
            </tr>
        </tbody>
    </table>

    <div class="header-btn d-none f-right d-lg-block">
        <a href="{{ path('app_hackathon_index') }}">back to list</a>
        <a href="{{ path('app_hacakthon_edit', {'eventId': hackathon.event.eventId}) }}">edit</a>
    </div>

{% endblock %}
