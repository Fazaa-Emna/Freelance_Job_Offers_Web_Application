{% extends 'base.html.twig' %}

{% block title %}New Event{% endblock %}

{% block body %}

    <body style="background-image: url({{ asset('assets/img/FrontForm2.jpg') }}) ;  background-size: cover; background-position: center; " >
    <div class="container d-flex flex-column " style="padding-top: 60px;">
        <div class="row min-vh-100">
            <div class="col-sm-10 col-md-6 col-lg-8 mx-auto d-table h-25">
                <div class="d-table-cell align-middle">

                    <div class="text-center mt-4">
                        <h1 style="color: white;">Create new Event</h1>
                        <p class="lead" style="color: white;">
                            Start creating the best Event With Instalance.
                        </p>
                    </div>

                    {{ form_start(form , {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="card">
                        <div class="card-body">
                            <div class="m-sm-5">


                                <div class="mb-3">



                                    {{  form_label ( form.eventName,'Event Name' ,{ 'attr': {'class': 'text-info'}}) }}

                                    {% if form_errors(form.eventName) is not empty  %}
                                        {% for error in form.eventName.vars['errors'] %}
                                            <p class="text-danger">{{ error.message }}</p>
                                        {% endfor %}


                                    {% endif %}

                                    {{  form_widget ( form.eventName ,{ 'attr': {'class': 'form-control'}}) }}

                                </div>

                                <div class="mb-3">
                                    {#        {{ form_row(form.description) }}#}
                                    {{  form_label ( form.description,'Description' ,{ 'attr': {'class': 'text-info'}}) }}
                                    {% if form_errors(form.description) is not empty  %}
                                        {% for error in form.description.vars['errors'] %}
                                            <p class="text-danger">{{ error.message }}</p>
                                        {% endfor %}


                                    {% endif %}

                                    {{  form_widget ( form.description ,{ 'attr': {'class': 'form-control'}}) }}
                                </div>

                                <div class="mb-3">
                                    {#        {{ form_row(form.location) }}#}

                                    {{  form_label ( form.location,'Location' ,{ 'attr': {'class': 'text-info'}}) }}
                                    {% if form_errors(form.location) is not empty  %}
                                        {% for error in form.location.vars['errors'] %}
                                            <p class="text-danger">{{ error.message }}</p>
                                        {% endfor %}


                                    {% endif %}

                                    {{  form_widget ( form.location ,{ 'attr': {'class': 'form-control'}}) }}

                                </div>

                                <div class="mb-3">
                                    {#        {{ form_row(form.maxAttendees) }}#}

                                    {{  form_label ( form.maxAttendees,'max Attendees' ,{ 'attr': {'class': 'text-info'}}) }}
                                    {% if form_errors(form.maxAttendees) is  empty  %}
                                        {% for error in form.maxAttendees.vars['errors'] %}
                                            <p class="text-danger">{{ error.message }}</p>
                                        {% endfor %}


                                    {% endif %}

                                    {{  form_widget ( form.maxAttendees ,{ 'attr': {'class': 'form-control'}}) }}


                                </div>
                                <div class="row">
                                    <div class="col">{{ form_row(form.startDate) }}</div>
                                    <div class="col">{{ form_row(form.endDate) }}</div>
                                    <div class="col">{{ form_row(form.registrationdeadline) }}</div>
                                </div>


                                <button class="btn">{{ button_label|default('Save') }}</button>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
    <a href="{{ path('app_event_index') }}">back to list</a>
    </body>

{% endblock %}
