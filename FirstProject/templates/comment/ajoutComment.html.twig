
{% extends 'front.html.twig' %}

{% block body %}
    <div style= "display: flex; align-items: center;justify-content:center; margin-top:100px;padding:10px;">

      <div class="card">
        <div class="card-body">
          <h5 class="card-title">add a comment</h5>

          <!-- General Form Elements -->
          {{ form_start (f,{attr:{novalidate:'novalidate'}}) }}
          <div class="row mb-3">
            <label for="inputText" class="col-sm-3 col-form-label">Your Comment</label>
              {{ form_widget (f.body,{'attr':{'class':'form-control'}}) }}
              {{ form_errors (f.body,{'attr':{'class':'text-danger'}}) }}
          </div>
          
          

          <div class="row mb-3">
            <label for="inputText" class="col-sm-3 col-form-label">Blog Id</label>
                {{ form_widget (f.blog,{'attr':{'class':'form-control'}}) }}
                {{ form_errors (f.blog,{'attr':{'class':'text-danger'}}) }}
            </div>                    

            <div class="col-sm-10" style="display:flex; align-items:center; justify-content:center">
              {{ form_widget (f.Add,{'attr':{'class':'btn btn-primary'}}) }}
            </div>

          {{ form_end (f) }}
        </div>
      </div>
   
  </div> 
  {% endblock %}
